    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </div>
  <div class="control-group">
    <%= f.label :tax %><br>
    <%= f.text_field :tax %>
  </div>
  <div class="control-group">
    <%= f.label :employee_id %><br>
    <%= collection_select( :invoice ,:employee_id, Employee.all, :id, :name, {}, { :multiple=> false} ) %>
  </div>
  <div class="control-group">
    <%= f.label :status_type %><br>
    <%= f.select(:status_type, options_for_select([  [ 'PAID', 'PAID'], ['PENDING', 'PENDING'] ])) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
